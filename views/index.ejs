<body>

<div class="container">

        <h2 class="welcome-title">Створюйте свої нотатки та списки справ тут!</h2>

    <%- include('components/cat')%>

    <button type="button" id="addNoteButton" class="btn btn-warning mb-2"><i class="far fa-comment-alt"></i>Додати нотатку</button>
    <button type="button" id="addListButton" class="btn btn-success mb-2"><i class="far fa-check-square"></i>Додати список справ</button>

    <!--Колонка-->

    <!--Виведення списку нотаток-->

    <div class="card-columns mt-2" id="notesList">

        <!--Картка Нотатка-->
        <% notes.forEach((elem) => { %>
            <div class="card" data-type="<%= elem.type %>" id="<%= elem.id%>">
                <div class="card-body"> <!--data-id="<%= elem.id %>" >-->
                    <h5 class="card-title"> <!--data-id="<%= elem.id %>" >--> <%= elem.title %> </h5>
                    <% if (elem.body) { %>
                        <!--<div class="body" data-id="<%= elem.id %>">-->
                            <ul class="list-group list-group-flush">
                            <% elem.body.forEach(item => { %>
                                    <% if(item.check) { %>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <div class="input-group-text">&#10003;</div>
                                                    <li class="list-group-item crossed-text"> <%= item.todo %></li>
                                                </div>
                                            </div>
                                    <% } else{%>
                                            <div class="input-group">
                                                <div class="input-group-prepend" >
                                                    <div class="input-group-text">&#9723;</div>
                                                    <li class="list-group-item"> <%= item.todo %></li>
                                                </div>
                                            </div>
                                    <% } %>
                            <% }) %>
                            </ul>
                        <!--</div>-->
                    <% } else { %>
                        <p class="card-text"> <!--data-id="<%= elem.id %>" >--> <%= elem.text %></p>
                    <% } %>

                </div>
            </div>
        <% })%>

